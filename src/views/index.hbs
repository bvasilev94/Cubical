<main>
  <h1>Browser</h1>
  <form action="" method="">
    <input type="text" class="search" name="search" placeholder="Search...">
    <input type="number" name="from" class="difficulty" placeholder="Difficulty from...">
    <span>-</span>
    <input type="number" name="to" class="difficulty" placeholder="Difficulty to...">
    <input type="submit" value="search">
  </form>

  {{#each cubes}}
  <div class="cube">
    <img class="cube"
      src="{{cubeImgUrl}}">
    <p class="name">{{cubeName}}</p>
    <p><span>Difficulty level:</span> {{cubeDiff}}</p>
    <a class="btn" href="/cubes/details/{{id}}">Details</a>
  </div>
  {{else}}
  <p>There are no cubes yet!</p>
  {{/each}}
</main>